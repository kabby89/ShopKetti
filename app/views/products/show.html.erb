        	<div class="description">
            	<div class="product-image">
                	<div class="col-lg">
                    	<ul>
                    		<% @product.product_images.each do |image| %>
                    		    <% if image.featured == true %>
                                    <li>
								        <%= image_tag image.image_url(:product_large) %>
							         </li>
                                <% else %>
                                    <li>
                                        <%= image_tag image.image_url(:product_small) %>
