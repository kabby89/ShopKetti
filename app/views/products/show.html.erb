<p id="notice"><%= notice %></p>
<div class="col-xs-12 col-sm-offset-1 col-sm-10">
	
  	<strong>Name:</strong>
  	<%= @product.name %><br /><br />

	<strong>Images:</strong><br />
	<div class="col-xs-12">
		<% @product.product_images.each do |image| %>
			<div class="col-xs-6">
				<%= image_tag image.image_url(:large) %>
			</div>
		<% end %>
	</div><br /><br />

	<div class="col-xs-12">
  		<strong>Description:</strong>
  		<%= @product.description %><br /><br />
  	</div>

  	<div class="col-sm-6">
		<strong>Colors:</strong><br />
		<% @product.colors.each do |color| %>
			<%= color.hue %><br />
		<% end %><br /><br />
	</div>

	<div class="col-sm-6">
		<strong>Sizes:</strong><br />
		<% @product.sizes.each do |size| %>
			<%= size.measurement %><br />
		<% end %>
	</div>
	<div class="clear"></div>
	<div class="col-xs-12">
		<b>Price:</b><%= number_to_currency(@product.price) %><br />
		<b>Shipping:</b><%= number_to_currency(@product.shipping_cost) %><br /><br />
	</div>

	<div class="col-xs-12">
		<%= link_to 'Edit', edit_product_path(@product), :class => 'btn btn-primary' %> 
		<%= link_to 'Back', product_path, :class => 'btn btn-primary' %>
	</div>
</div>