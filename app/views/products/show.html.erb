                </div>
                <div class="form-control">
                	<%= @product.style_number %>
                </div>
                <div class="form-control">
                	<%= number_to_currency(@product.price) %>
                </div>
                <div class="form-control">
                	<%= number_to_currency(@product.shipping_cost) %>
                </div>
                <div class="form-control">
                	<ul class="colors">
                		<% @product.colors.each do |color| %>
							<li><%= color.hue %></li>
						<% end %>
                    </ul>
                    <ul class="size">
                    	<% @product.sizes.each do |size| %>
							<li><%= size.measurement %></li>
						<% end %>
                    </ul>
                </div>
            </div>
