<br /><br /><br />
<p id="notice"><%= notice %></p>
<div class="col-xs-12 col-sm-offset-1 col-sm-10">
	<p>
  		<strong>Name:</strong>
  		<%= @product.name %>
	</p>
	<p>
		<strong>Images:</strong><br />
		<div class="col-xs-12">
			<% @product.product_images.each do |image| %>
				<div class="col-xs-6">
					<%= image_tag image.image_url(:large) %>
				</div>
			<% end %>
		</div>
	</p>	

	<p>
  		<strong>Description:</strong>
  		<%= @product.description %>
	</p>
	<%= form_for @order_item, remote: true do |item| %>
		<% @product.skus.each do |sku| %>
			<% sku.product.colors.each do |color| %>
				<%= color.hue %><br />
				<% sku.product.sizes.each do |size| %>
					<%= size.measurement %>
					<%= item.number_field :quantity, class: "form-control; width: 50px" %>
				<% end %><br />
			<% end %>
		<% end %><br />
		<%= item.submit "Add to Cart", class: "btn btn-primary" %><br /><br />
	<% end %>
</div>