<br /><br /><br />
<div class="col-xs-12">
	<div class="col-xs-12">
		<div class="text-center">
			<h1>Marketplace by Creator</h1>
		</div>
		<div class="pull-right">
			<%= link_to 'View Marketplace by product', market_products_path %>
		</div>
	</div>	
	<div class="col-xs-12 col-sm-offset-1 col-sm-10">
		<% @users.each do |store| %>
			<div class="booyah-box market-box col-xs-12 col-sm-2">
				<% if store.user_type == 'creator' %>
					<%= link_to market_store_path(store) do %>
						<%= image_tag store.logo %><br />	
						<%= store.company_name %><br />
						<%= store.email %><br />
					<% end %>
				<% end %>
			</div>
		<% end %>
	</div>
</div>