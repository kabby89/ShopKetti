<div class="col-xs-12 col-sm-offset-1 col-sm-10 booyah-box">
	<%= image_tag current_store.logo %>
	<h1><%= current_store.company_name %></h1>
	<h4><%= current_store.company_description %></h4>
	<br />
	<% @products.each do |product| %>
		<div class="col-xs-3 booyah-box">
			<% product.product_images.each do |picture| %>
					<% if picture.featured == true %>
						<div class="text-center">
							<%= image_tag picture.image.thumb %>	
						</div>
					<% end %>
				<% end %>
			<%= link_to market_stores_product_path(product) do %>
				<h4><%= product.name %></h4>
			<% end %>
			<p><strong>Colors:</strong>
				<% product.colors.each do |color| %>
					<%= color.hue %>
				<% end %>
			</p>
			<p><b>Style #:</b><%= product.style_number %></p>
			<p><b>Price</b><%= number_to_currency product.price %></p>
			<%= link_to 'Buy', market_stores_product_path(product),  :class => 'btn btn-primary btn-sm pull-right' %>
		</div>
	<% end %>
</div>
