<br /><br /><br />
<div class="col-xs-offset-1 col-xs-10">
	<div class="col-xs-12">
		<div class="text-center">
			<h1>Marketplace by Product</h1>
		</div>
		<div class="pull-right">
			<%= link_to 'View Marketplace by Creator', market_stores_path %>
		</div>
	</div>
	<div class="col-xs-12 col-sm-offset-1 col-sm-10">
		<% @products.each do |item| %>
			<div class="booyah-box market-box col-xs-12 col-sm-3">
				<% item.product_images.each do |picture| %>
					<% if picture.featured == true %>
						<div class="text-center">
							<%= image_tag picture.image.thumb %>	
						</div>
					<% end %>
				<% end %>
				<div class="text-center">
				<%= link_to market_stores_product_path(item) do %>
					<b><%= item.name %></b><br />
				<% end %>
					<%= number_to_currency item.price %><br />
					<%= truncate(item.description , :length => 30) %><br />
					Sold by: <%= item.user %><br />
				</div>
			</div>
		<% end %>
	</div>
</div>
