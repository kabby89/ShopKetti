<%= simple_form_for(@project) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <h3>Tasks</h3>
    <div class="tasks">
    	<%= f.simple_fields_for :tasks do |task| %>
    		<%= rend 'task_fields', :f => task %>
    	<% end %>
    </div>
    <div class="links">
    	<%= link_to_add_association 'add task', f, :tasks %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
