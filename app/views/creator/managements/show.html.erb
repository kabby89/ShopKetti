<h1 class="text-center">Product Management</h1>
<div class="col-xs-12 col-sm-offset-1 col-sm-10">
	<% @products.each do |product| %>
		<div class="col-xs-12 booyah-box">
			<p>
				<div class="col-sm-2">
					<% product.product_images.each do |picture| %>
						<% if picture.featured == true %>
							<%= image_tag picture.image.thumb %>	
						<% end %>
					<% end %>
				</div>
				<div class="col-sm-2">
					<%= link_to product_path(product) do %>
						<strong><%= product.name %></strong>
					<% end %>
				</div>
				<div class="col-sm-2">
					<strong>Color/Sizes</strong><br />
					<% product.skus.each do |sku| %>
						<%= sku.color.hue + " " + sku.size.measurement %>
					<% end %>
					<!-- for the time being I have put the inventory management project on hold. Below is the code to accept input on each SKU. It still needs the logic to update the inventory in the DB to be created. -->
					<%# simple_form_for product :url => edit_product_path(product), :method => :patch do |f| %>
						<%# f.simple_fields_for :skus do |s| %>
							<%# product.skus.each do |item| %>
								<%# item.color.hue + " " + item.size.measurement + " quantity:" %>
								<%# s.input :inventory, :label => false, :input_html => {:style => 'width: 100px;'} %>
							<%# end %>
							<%# s.submit 'Update Quantities' %>
						<%# end %>
					<%# end %>
				</div>
				<div class="col-sm-2">
					<strong>Date Available:</strong><br />
					<%= product.date_available %>
				</div>
				<div class="col-sm-2">
					Price: <%= number_to_currency(product.price) %><br />
					Shipping: <%= number_to_currency(product.shipping_cost) %>
				</div>
				<div class="col-sm-2">
					<%= link_to 'View', product_path(product), :class => 'btn btn-primary', :style => 'margin: 5px;' %><br />
					<%= link_to 'Edit', edit_product_path(product), :class => 'btn btn-primary', :style => 'margin: 5px;' %> <br />
				</div>
			</p>
		</div>
	<% end %>