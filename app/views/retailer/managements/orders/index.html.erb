<div class="col-xs-12 col-sm-offset-1 col-sm-10 booyah-box">
	<h2>Order Management</h2>
	<h4>Orders:</h4>
	<% @orders.each do |order| %>
		<% if order.user_id == current_user.id %>
			<div class="col-xs-12 booyah-box">
				<div class="col-xs-1">
					<%= order.id %>
				</div>
				<div class="col-xs-6">
					<% order.order_items.each do |item| %>
						<b><u><%= item.sku.product.name %></u></b><br />
						<% item.sku.product.colors.each do |color| %>
							<b><%= color.hue %></b><br />
							<% item.sku.product.sizes.each do |size| %>
								<%= size.measurement %>:
								<%= item.quantity %> units 
								<%= number_to_currency(item.price_per_unit * item.quantity) %><br />
							<% end %><br />
						<% end %><br />
					<% end %>
				</div>
				<div class="col-xs-3">
					Order Status: <%= order.order_status_id %><br />
					Ordered: <%= order.created_at %><br /><br />
					Creator: Incorrect code needs fixing<%# order.user.company_name %><br />
					Creator Email: <%# order.user.email %><br />
					<% if !order.order_sh_date.nil? %>
						Order Shipped on: <%= order.order_sh_date %><br />
						Shipped by: <%= order.ship_type %><br />
						Tracking #: <%= order.tracking %><br />
					<% end %>
				</div>
				<div class="col-xs-2 pull-right">
					Subtotal: <%= number_to_currency(order.subtotal) %><br />
					Shipping: <%= number_to_currency(order.shipping) %><br />
					Total: <%= number_to_currency(order.total) %><br />
				</div>
			</div>
		<% end %>
	<% end %>
</div>